<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".cliente.Parte5"
    tools:showIn="@layout/activity_parte5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:text="Costo Total"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlue"
            android:layout_marginBottom="15dp"
            android:paddingTop="3dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:textSize="15dp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Lugar de Inicio: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etInicio"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Lugar de Destino: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etDestino"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo Vehiculo"
            android:editable="false"/>

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spTVehiculo"
            android:layout_marginTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Placa: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etPlaca"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Costo Total: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCosto"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:enabled="false"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Recibido: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etRecibido"
            android:layout_width="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:text="Cambio: "
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etCambio"
            android:layout_width="match_parent"
            android:enabled="false"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content" />


        <Button
            android:layout_width="200dp"
            android:id="@+id/bAceptar"
            android:text="Aceptar"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/button_orange"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp" />

        <Button
            android:layout_width="200dp"
            android:id="@+id/bCancelar"
            android:text="Cancelar"
            android:layout_height="wrap_content"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            android:background="@drawable/button_orange"
            android:layout_gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="73dp" />


    </LinearLayout>


</ScrollView>